# location of the Python header files
 
PYTHON_VERSION = 2.7
PYTHON_INCLUDE = /home/stu/anaconda2/include/python$(PYTHON_VERSION)
BOOST_PYLIB = py27
 
# location of the Boost Python include files and library
 
BOOST_INC = /usr/include
BOOST_LIB = /usr/lib/x86_64-linux-gnu
 
# compile mesh classes
TARGET = LDH
FILE=LBM_DataHandler
EXT=cpp
 
$(FILE).so: $(FILE).o
	g++ -std=c++11 -shared -Wl,--export-dynamic $(FILE).o -L$(BOOST_LIB) -lboost_python-$(BOOST_PYLIB) -L/home/stu/anaconda2/lib/python$(PYTHON_VERSION)/config -lpython$(PYTHON_VERSION) -o $(TARGET).so
 
$(FILE).o: LBM_DataHandler.cpp
	g++ -std=c++11 -I$(PYTHON_INCLUDE) -I$(BOOST_INC) -fPIC -c $(FILE).$(EXT)
